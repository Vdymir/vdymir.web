---
interface Props {
  title: string;
  date: string;
  position: string;
  description: string;
}

const { date, description, position, title } = Astro.props;
---

<article
  class="flex flex-col w-[360px] p-4 rounded bg-[var(--bone)] text-[var(--green)] shadow-md shadow-[var(--bone)] gap-2"
>
  <div class="flex items-center justify-between">
    <h3 class="text-xl font-bold">{title}</h3>
    <p class="font-semibold">{date}</p>
  </div>
  <h4 class="font-semibold">{position}</h4>
  <p>
    {description}
  </p>
</article>
