---
interface Props {
  url_img: string;
  title: string;
  description: string;
  stack: string[];
  project_url: string;
}

const { stack = [], url_img, description, title, project_url } = Astro.props;
---

<a class="cursor-pointer" target="_blank" href={project_url}>
  <div class="flex px-3 py-3">
    <div class="max-w-sm rounded overflow-hidden shadow-lg bg-[var(--bone)]">
      <img
        class="w-full h-56 object-cover"
        src={url_img}
        alt="Sunset in the mountains"
      />
      <div class="px-6 py-4">
        <div class="font-bold text-xl mb-2 text-[var(--green)]">{title}</div>
        <p class="text-base text-[var(--dark-green)]">
          {description}
        </p>
      </div>
      <div class="px-6 pt-2 pb-4 gap-2 flex items-center flex-wrap">
        {
          stack.map((item) => (
            <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-xs font-semibold text-gray-700">
              {item}
            </span>
          ))
        }
      </div>
    </div>
  </div>
</a>
